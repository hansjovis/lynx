{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [ "plugin:react/recommended", "eslint:recommended" ],
  "rules": {
    "indent": [ "error", 2 ],
    "space-in-parens": [ "error", "always" ],
    "array-bracket-spacing": [ "error", "always" ],
    "comma-spacing": ["error", { "before": false, "after": true }]
  }
}